<Window x:Class="MarketWPF.add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarketWPF"
        mc:Ignorable="d"
        Title="add" Height="600" Width="800">
    <StackPanel>
        <Label  Content="Name" HorizontalAlignment="Center" Margin="0,50,0,0"></Label>
        <TextBox  Width="500" Name="textbox_name" Height="20" Margin="0,50,0,0" ></TextBox>
        <Label  Content="Money" HorizontalAlignment="Center" Margin="0,50,0,0"></Label>
        <TextBox  Width="500" Name="textbox_money" Height="20" Margin="0,50,0,0" ></TextBox>


        <Button Content="Add" Margin="0,200,0,0" Click="Button_Click" ></Button>
    </StackPanel>
</Window>
